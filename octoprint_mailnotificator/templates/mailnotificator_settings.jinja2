<h3>{{ _('Mail settings') }}</h3>
<form class="form-horizontal">
    <div class="control-group">
        <label class="control-label">{{ _('Enable') }}</label>
        <div class="controls">
            <input type="checkbox" data-bind="checked: settings.plugins.mailnotificator.activated">
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">{{ _('API Key') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.mailnotificator.consumer_key">
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">{{ _('API Key Secret') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.mailnotificator.consumer_secret">
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">{{ _('Acces Token') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.mailnotificator.access_token">
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">{{ _('Acces Token Secret') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.mailnotificator.access_token_secret">
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">{{ _('Username') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.mailnotificator.username">
        </div>
    </div>
     <div class="control-group">
        <label class="control-label">{{ _('Hashtags') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.mailnotificator.hashtags">
        </div>                                                                                                                                                                                                                                   </div>                                                                                                                                                                                                                        
    <div style="clear:both">
        <small>{{ _("If you modify these settings, a test message will be sent to Twitter.") }}</small>
    </div>
</form>
<h3>{{ _('Messages settings') }}</h3>
<form class="form-horizontal" data-bind="foreach: {data:Object.keys(settings.plugins.mailnotificator.events) }">
    <div class="mailnotificator_message" data-bind="visible: $parent.settings.plugins.mailnotificator.events[$data].name">
        <h4>
            <input type="checkbox" class="" data-bind="checked: $parent.settings.plugins.mailnotificator.events[$data].enabled"/>
            <span data-bind="text: $parent.settings.plugins.mailnotificator.events[$data].name"></span>
        </h4>
        <div class="control-group">
            <label class="control-label">{{ _("Message") }}</label>
            <div class="controls">
                <input type="text" class="input-block-level" data-bind="value: $parent.settings.plugins.mailnotificator.events[$data].message"/>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">{{ _("Include snapshot") }}</label>
            <div class="controls">
                <input type="checkbox" data-bind="checked: $parent.settings.plugins.mailnotificator.events[$data].with_snapshot"/>
            </div>
        </div>
        <div class="control-group" data-bind="if: $parent.settings.plugins.mailnotificator.events[$data].step">
            <label class="control-label">{{ _("Notify every") }}</label>
            <div class="controls">
                <input type="number" min="1" max="100" step="1" data-bind="value: $parent.settings.plugins.mailnotificator.events[$data].step"/>%
            </div>
        </div>
    </div>
</form>
<h3>Scripts settings</h3>
<form class="form-horizontal">
    <div style="clear:both">
        <p>{{ _("To modify these settings, you need to set") }} <code>allow_scripts: true</code> {{ _("in your configuration file.") }}</p>
    </div>
    <div  data-bind="visible: settings.plugins.mailnotificator.allow_scripts">
        <div class="control-group">
            <label class="control-label">{{ _('Before message, start:') }}</label>
            <div class="controls">
                <input type="text" class="input-block-level" data-bind="value: settings.plugins.mailnotificator.script_before">
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">{{ _('After message, start:') }}</label>
            <div class="controls">
                <input type="text" class="input-block-level" data-bind="value: settings.plugins.mailnotificator.script_after">
            </div>
        </div>
        <div style="clear:both">
            <p>
                {{ _("Here you can specify a file to be executed <strong>before</strong> and <strong>after</strong> each message is sent to Discord.") }} 
                {{ _("<strong>The file should be executable by the user under which OctoPrint is running</strong>") }}
            </p>
        </div>
    </div>
</form>
